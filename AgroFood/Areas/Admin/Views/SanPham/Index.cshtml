
@model IEnumerable<AgroFood.Models.SanPham>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/Layout_admin.cshtml";
}

<main>
    <section class="service_section">
        <div class="container-fluid">

            <h2>Danh sách sản phẩm</h2>

            <p>
                <a href="~/Admin/SanPham/ThemMoiSP">Thêm mới</a>
            </p>
            <table class="table">
                <tr>
                    <th>
                        Mã Mặt Hàng
                    </th>
                    <th>
                        Mã Sản Phẩm
                    </th>
                    <th>
                        Tên Sản Phẩm
                    </th>
                    <th>
                        Giá Bán
                    </th>
                    <th>
                        Nhà Cung Cấp
                    </th>
                    <th>
                        Trọng Lượng
                    </th>
                    <th>
                        Mô Tả
                    </th>
                    <th>
                        Số Lượng Tồn
                    </th>
                    <th>
                        Hình Ảnh
                    </th>
                    <th>
                        Hình Ảnh Khác
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaMH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaSP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenSP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GiaBanSP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaNCC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrongLuong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MoTaSP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoLuongT)
                        </td>
                        <td>
                            <img src="@item.HinhAnh" style="height:50px;width:50px" />
                        </td>
                        <td>
                            <img src="@item.HinhAnh1" style="height:50px;width:50px" />
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "CapNhatSP", new { id = item.MaSP }) |
                            @Html.ActionLink("Delete", "XoaSP", new { id = item.MaSP })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </section>
</main>


<div class="sales-market">
    <div class="sales-maket__img">
        <img src="~/assets/img/img-sales-heading/bgsupersale.v202310020953.png" alt="">
    </div>
    <div class="sales-maket__list-pr">

        @{
            if (@ViewBag.getControllerHome.DanhSachSanPham != null)
            {

                for (var i = 0; i < 4; i++)
                {

                    var giaBanOri = @ViewBag.getControllerHome.DanhSachSanPham[i].GiaBanSP;
                    string giaBan = string.Format("{0:n0}", giaBanOri);
                    <a href="@Url.Action("DetailProduct",new {@TenSP = @ViewBag.getControllerHome.DanhSachSanPham[i].TenSP})" class="sales-tw__link">
                        <div class="sales-tw__sub-item">
                            <i class="far fa-heart sales-tw__sub-icon"></i>
                            <div class="sales-tw__sub-item-img">
                                <img src="@ViewBag.getControllerHome.DanhSachSanPham[i].HinhAnh" alt="">
                            </div>
                            <div class="sales-tw__sub-item-content">
                                <p class="sales-tw_sub-item__sub-shead">
                                    @ViewBag.getControllerHome.DanhSachSanPham[i].TenLH
                                </p>
                                <h3 class="sales-tw_sub-item__sub-head">
                                    @ViewBag.getControllerHome.DanhSachSanPham[i].TenSP
                                </h3>
                                @*                                 <span class="sales-tw_sub-item__sub-prices">@ViewBag.getControllerHome.DanhSachSanPham[i].GiaBanSP đ</span>*@
                                <span class="sales-tw_sub-item__sub-prices">@giaBan đ</span>

                            </div>

                            <button class="sales-tw_sub-item__add">Chọn Mua</button>

                            <div class="item__sale-off">
                                <span class="sale-off-percent">50%</span>
                                <span class="sale-off-label">GIẢM</span>
                            </div>
                        </div>
                    </a>
                }
            }
        }

    </div>
    <div class="sales-market__bottom">
        <a href="">Xem tất cả sản phẩm</a>
        <i class="fas fa-sort-down"></i>
    </div>

</div>


<div class="sales-this-week">
    <h2 class="sales-this-week__heading">TẤT CẢ SẢ PHẨM</h2>
    <div class="row">
        <div class="col-lg-12">
            <div class="sales-this-week__item">
                @*<div class="sales-this-week__item-heading vet">
                        <h4>Trái cây các loại</h4>
                    </div>*@
                <div class="sales-tw__sub-list vet">
                    @{
                        if (@ViewBag.getControllerHome.DanhSachSanPham != null)
                        {

                            foreach (var item in ViewBag.getControllerHome.DanhSachSanPham)
                            {

                                var giaBanOri = item.GiaBanSP;
                                string giaBan = string.Format("{0:n0}", giaBanOri);
                                <a href="@Url.Action("DetailProduct",new { @TenSP = item.TenSP })" class="sales-tw__link">
                                    <div class="sales-tw__sub-item">
                                        <i class="far fa-heart sales-tw__sub-icon"></i>
                                        <div class="sales-tw__sub-item-img">
                                            <img src="@item.HinhAnh" alt="">
                                        </div>
                                        <div class="sales-tw__sub-item-content">
                                            <p class="sales-tw_sub-item__sub-shead">
                                                @item.TenLH
                                            </p>
                                            <h3 class="sales-tw_sub-item__sub-head">
                                                @item.TenSP
                                            </h3>
                                            <span class="sales-tw_sub-item__sub-prices">@giaBan đ</span>
                                            @* <span class="sales-tw_sub-item__sub-prices">@item.GiaBanSP đ</span>*@
                                        </div>

                                        <button class="sales-tw_sub-item__add">Chọn Mua</button>
                                    </div>
                                </a>

                            }
                        }
                    }





                </div>
            </div>
        </div>
    </div>

</div>



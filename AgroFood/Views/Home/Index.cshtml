

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
    ViewBag.active = 1;

}
@section Style {
    .content {
    padding-top: 161px;
    width: 100%;
    background-color: #f5f5f5;
    }

    .sales-tw__link {
    flex: 0 0 20%;
    display:flex;
    }




    .sales-tw__sub-item {
    width:100%;
    }

    .sales-tw_sub-item__add {
    margin-top:10px;
    }

    .sales-tw__sub-item-content {
    flex:1;}

    .sales-tw_sub-item__sub-head {
    flex:1;}

    .sales-tw__sub-item-content {
    display:flex;
    flex-direction:column;}

    .sales-tw_sub-item__sub-prices {
    margin-bottom:0;
    margin-top:10px;}


}

@section render_history_search {
    @{
        if (@ViewBag.getControllerHome.SearchList != null)
        {
            <ul class="header_history-list">
                @foreach (var item in @ViewBag.getControllerHome.SearchList)
                {
                    <li class="header_history-item">
                        <a href="">
                            <span>@item</span>
                        </a>
                    </li>
                }
                @*<li class="header_history-item">
                        <a href="">
                            <span>Táo ninh thuận</span>
                        </a>
                    </li>
                    <li class="header_history-item">
                        <a href="">
                            <span>Măng cụt</span>
                        </a>
                    </li>*@
            </ul>
        }
    }



}



        }

        .side__bar-transition {
            position: absolute;
            top: 160px;
            left:40px;
            bottom:10px;
            position: fixed;
            width: 15%;
            border: 1px solid #ddd;
            z-index: 20;
            padding-top: 1.125rem;
            padding-bottom: 1.125rem;
            display: block;
            transition: all 1s linear;
            box-shadow: 0 2px 10px var(--shadow-color);
            background-color: #FFF;
            transform: translateY(7px);
            border-radius: 4px;
            max-width: 100%;
            flex: 1;
            overflow: scroll;
            -ms-overflow-style: none;
            /* Internet Explorer 10+ */
            scrollbar-width: none;
            /* Firefox */
        }

            .side__bar-transition::-webkit-scrollbar {
                display: none;
                /* Safari and Chrome */
            }

        .side__bar-transition-heading {
            font-size: 1.6rem;
            color: var(--text-color);
            padding: 8px 16px 8px;
            margin-top: 0;
            text-transform: uppercase;
            font-weight: 600;
            border-bottom: 1px solid rgb(233, 233, 233);
        }

        .side__bar-transition ul li {
            padding: 7px 20px;
        }

            .side__bar-transition ul li a {
                text-decoration: none;
                align-items: center;
            }

        .side_transition-item-top .side_transition-detail {
            display: none;
        }

        .side_transition-item-top.active .side_transition-detail {
            display: block;
        }


        .side_right-icon,
